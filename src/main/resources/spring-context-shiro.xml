<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <description>Spring Shiro整合配置文件</description>

    <bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
        <!-- 给ShiroFilterFactoryBean配置securityManager -->
        <property name="securityManager" ref="securityManager"/>
        <!-- 当方位需要认证的资源时，没权限自动跳转到该页面 -->
        <property name="loginUrl" value="/login"/>
        <!-- 认证成功后的跳转页面，若不配置默认跳转上一个url -->
        <property name="successUrl" value="/admin"/>
        <!-- 配置没有访问权限时跳转的页面 -->
        <property name="unauthorizedUrl" value="/error"/>
        <!-- 配置shiro的过滤器链 -->
        <property name="filterChainDefinitions">
            <value>
                /tologin=anon
                /login=authc
                /logout=logout
                /static/**=anon
                <!-- 设置cookie免登录的页面 -->
                /index=user
                /admin/**=authc
            </value>
        </property>
    </bean>

    <!-- 配置logout过滤器，指定退出登录跳转的页面 -->
    <bean id="logout" class="org.apache.shiro.web.filter.authc.LogoutFilter">
        <property name="redirectUrl" value="/login"/>
    </bean>

    <!-- 配置authc过滤器自定义验证参数 -->
    <bean id="authc" class="org.apache.shiro.web.filter.authc.FormAuthenticationFilter">
        <property name="usernameParam" value="name"/>
        <property name="passwordParam" value="pass"/>
        <property name="rememberMeParam" value="rememberMe"/>
    </bean>

    <!-- 配置securityManager -->
    <bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
        <property name="realm" ref="userRealm"/>
        <property name="cacheManager" ref="shiroCacheManager"/>
        <property name="sessionManager" ref="sessionManager"/>
        <property name="rememberMeManager" ref="rememberMeManager"/>
    </bean>

    <!-- 记住我配置 -->
    <bean id="rememberMeManager" class="org.apache.shiro.web.mgt.CookieRememberMeManager">
        <property name="cookie" ref="rememberMeCookie"/>
    </bean>

    <!-- 记住我cookie -->
    <bean id="rememberMeCookie" class="org.apache.shiro.web.servlet.SimpleCookie">
        <!-- 设置cookie存活时间 -->
        <property name="maxAge" value="604800"/>
        <!-- 这只cookie的mingcheng -->
        <property name="name" value="blog"/>
    </bean>

    <!-- 配置自定义的realm -->
    <bean id="userRealm" class="com.sen.blog.shiro.UserRealm">
        <property name="credentialsMatcher" ref="credentialsMatcher"/>
    </bean>

    <!-- 配置凭证匹配器 -->
    <bean id="credentialsMatcher" class="org.apache.shiro.authc.credential.HashedCredentialsMatcher">
        <property name="hashAlgorithmName" value="md5"/>
        <property name="hashIterations" value="2"/>
    </bean>

    <!-- 配置会话管理器 -->
    <bean id="sessionManager" class="org.apache.shiro.web.session.mgt.DefaultWebSessionManager">
        <!-- 单位是毫秒 -->
        <property name="globalSessionTimeout" value="3000000"/>
        <!-- 删除无效session -->
        <property name="deleteInvalidSessions" value="true"/>
    </bean>


</beans>